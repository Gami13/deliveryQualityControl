{
	"compilerOptions": {
		"target": "ES2022",
		"module": "ESNext",
		"strict": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"allowSyntheticDefaultImports": true,
		"skipLibCheck": true,
		"outDir": "./dist/",
		"moduleResolution": "node"
	},
	"ts-node": {
		"esm": true
	},
	"exclude": ["node_modules"]
}
